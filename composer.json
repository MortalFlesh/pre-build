{
    "name": "mf/pre-build",
    "description": "Pre build commands for exporting variables for building a package",
    "type": "project",
    "license": "MIT",
    "version": "1.1.0",
    "authors": [
        {
            "name": "Petr Chromec",
            "email": "mortal_flesh@seznam.cz"
        }
    ],
    "autoload": {
        "psr-4": {
            "MF\\PreBuild\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MF\\PreBuild\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.1",
        "beberlei/assert": "^2.8",
        "cpliakas/git-wrapper": "^2.0",
        "mf/collections-php": "^3.1",
        "symfony/console": "^4.0",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "lmc/coding-standard": "^1.0",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^7.0",
        "satooshi/php-coveralls": "^2.0",
        "symfony/var-dumper": "^4.0"
    },
    "bin": [
        "bin/pre-build-console"
    ],
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "extra": {
        "symfony-bin-dir": "bin",
        "symfony-tests-dir": "tests"
    },
    "scripts": {
        "post-install-cmd": [
            "@installTools"
        ],
        "all": [
            "@installTools",
            "@cs",
            "@phpunit",
            "@phpstan"
        ],
        "phpunit": "bin/phpunit -c phpunit.xml.dist",
        "phpstan": "bin/phpstan analyse -l 7 -c phpstan.neon src tests",
        "fix": [
            "bin/ecs check -vvv --ansi --clear-cache --fix -- src/ tests/"
        ],
        "cs": [
            "bin/ecs check -vvv --ansi -- src/ tests/"
        ],
        "installTools": [
            "cd tools/phpstan && composer install && composer link",
            "cd tools/csfixer && composer install && composer link"
        ]
    }
}
